<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:contentDescription="@string/close"
                android:src="@drawable/close_dialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.mvvm.task.activity.utils.CustomEditTextviewBold
            android:id="@+id/room_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/box_edit"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:paddingStart="@dimen/_5sdp"
            android:singleLine="true"
            android:hint="@string/room"
            android:textColor="@color/txt_heading_color"
            android:textColorHint="@color/txt_medium_color"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close"
            tools:ignore="RtlSymmetry">

        </com.mvvm.task.activity.utils.CustomEditTextviewBold>

        <com.mvvm.task.activity.utils.CustomTextViewSemiLight
            android:id="@+id/isLiveLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="text"
            android:text="@string/IsLive"
            android:textColor="@color/txt_heading_color"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@+id/isLiveSwitch"
            app:layout_constraintBottom_toBottomOf="@id/isLiveSwitch"
            app:layout_constraintRight_toLeftOf="@+id/isLiveSwitch"
            app:layout_constraintTop_toBottomOf="@+id/room_edt"

            tools:ignore="RtlSymmetry">

        </com.mvvm.task.activity.utils.CustomTextViewSemiLight>

        <Switch
            android:id="@+id/isLiveSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:checked="true"
            android:thumbTint="@color/colorPrimary"
            android:track="@drawable/switchtrack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/isLiveLbl"
            app:layout_constraintTop_toBottomOf="@+id/room_edt"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <com.mvvm.task.activity.utils.CustomButtonBold
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/button"
            android:text="@string/submit"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/isLiveLbl" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>